# Production Environment Configuration
# Copy this file and update with actual production values

# Database Configuration
DATABASE_URL=postgresql://teacher_hub_user:CHANGE_IN_PRODUCTION@postgres:5432/teacher_hub_prod
POSTGRES_DB=teacher_hub_prod
POSTGRES_USER=teacher_hub_user
POSTGRES_PASSWORD=CHANGE_IN_PRODUCTION

# Redis Configuration
REDIS_URL=redis://redis:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# JWT Configuration
JWT_SECRET=CHANGE_IN_PRODUCTION_SUPER_SECRET_KEY
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=production

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./uploads/temp

# YouTube API Configuration
YOUTUBE_API_KEY=CHANGE_IN_PRODUCTION
YOUTUBE_CLIENT_ID=CHANGE_IN_PRODUCTION
YOUTUBE_CLIENT_SECRET=CHANGE_IN_PRODUCTION
YOUTUBE_REDIRECT_URI=https://api.teacherhub.ug/auth/youtube/callback
YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.upload

# File Security Configuration
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
ENABLE_VIRUS_SCANNING=true
ENABLE_CONTENT_SCANNING=true

# External API Configuration
MOE_API_URL=https://api.education.go.ug
UNEB_API_URL=https://api.uneb.ac.ug
NCDC_API_URL=https://api.ncdc.go.ug

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=CHANGE_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_IN_PRODUCTION
AWS_REGION=us-east-1
S3_BUCKET_NAME=teacher-hub-files-prod

# Push Notifications Configuration
REACT_APP_VAPID_PUBLIC_KEY=CHANGE_IN_PRODUCTION

# Monitoring and Alerting Configuration
SENTRY_DSN=CHANGE_IN_PRODUCTION
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Real-time Features Configuration
WEBSOCKET_PORT=3002
ENABLE_WEBSOCKET_CLUSTERING=true

# Admin Configuration
ADMIN_EMAIL=admin@teacherhub.ug
ADMIN_PASSWORD=CHANGE_IN_PRODUCTION
SUPER_ADMIN_EMAILS=admin@teacherhub.ug,superadmin@teacherhub.ug

# Production URLs
API_URL=https://api.teacherhub.ug
WEB_URL=https://teacherhub.ug
WS_URL=wss://api.teacherhub.ug

# Notification Configuration
SLACK_WEBHOOK_URL=CHANGE_IN_PRODUCTION