{
  "name": "teacher-hub-platform",
  "version": "1.0.0",
  "description": "A comprehensive platform for Ugandan teachers to collaborate, share resources, and access government content",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=@teacher-hub/backend",
    "dev:web": "npm run dev --workspace=@teacher-hub/web",
    "dev:mobile": "npm run start --workspace=@teacher-hub/mobile",
    "build": "npm run build --workspaces",
    "build:mobile": "npm run build --workspace=@teacher-hub/mobile",
    "test": "npm run test --workspaces",
    "test:mobile": "npm run test --workspace=@teacher-hub/mobile",
    "lint": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx --fix",
    "lint:mobile": "npm run lint --workspace=@teacher-hub/mobile",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:mobile": "npm run format --workspace=@teacher-hub/mobile",
    "type-check": "npm run type-check --workspaces",
    "type-check:mobile": "npm run type-check --workspace=@teacher-hub/mobile",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "deploy": "./scripts/deploy.sh",
    "deploy:production": "./scripts/deploy.sh production",
    "deploy:staging": "./scripts/deploy.sh staging",
    "health-check": "./scripts/health-check.sh",
    "setup:youtube": "./scripts/setup-youtube-api.sh",
    "setup:security": "./scripts/setup-security-services.sh",
    "setup:monitoring": "./scripts/setup-monitoring.sh",
    "migrate:production": "./scripts/migrate-production.sh",
    "migrate:status": "./scripts/migrate-production.sh status",
    "migrate:rollback": "./scripts/migrate-production.sh rollback",
    "docker:up:all": "docker-compose -f docker-compose.yml -f docker-compose.security.yml -f docker-compose.monitoring.yml up -d",
    "docker:down:all": "docker-compose -f docker-compose.yml -f docker-compose.security.yml -f docker-compose.monitoring.yml down"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-expo": "^9.2.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
