{
  "name": "@teacher-hub/mobile",
  "version": "1.0.0",
  "description": "React Native mobile app for Teacher Hub platform with New Architecture",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='src/.*\\.(test|spec)\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='src/.*integration\\.(test|spec)\\.(ts|tsx)$'",
    "test:e2e": "detox test",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:visual": "jest --testPathPattern='.*\\.visual\\.(test|spec)\\.(ts|tsx)$'",
    "test:performance": "jest --testPathPattern='.*\\.performance\\.(test|spec)\\.(ts|tsx)$'",
    "test:contract": "jest --testPathPattern='.*\\.contract\\.(test|spec)\\.(ts|tsx)$'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contract",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "detox:build:ios": "detox build --configuration ios.sim.debug",
    "detox:test:ios": "detox test --configuration ios.sim.debug",
    "detox:build:android": "detox build --configuration android.emu.debug",
    "detox:test:android": "detox test --configuration android.emu.debug",
    "prepare": "husky install",
    "storybook": "storybook dev",
    "storybook:generate": "sb-rn-get-stories",
    "storybook:watch": "sb-rn-watcher",
    "build:development": "eas build --platform all --profile development --non-interactive",
    "build:preview": "eas build --platform all --profile preview --non-interactive",
    "build:production": "eas build --platform all --profile production --non-interactive",
    "build:ios:production": "eas build --platform ios --profile production-ios --non-interactive",
    "build:android:production": "eas build --platform android --profile production-android --non-interactive",
    "submit:ios": "eas submit --platform ios --latest",
    "submit:android": "eas submit --platform android --latest",
    "submit:all": "eas submit --platform all --latest",
    "update:preview": "eas update --branch preview --non-interactive",
    "update:production": "eas update --branch production --non-interactive",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "health:check": "node scripts/health-check.js",
    "feature-flags:update": "node scripts/update-feature-flags.js",
    "emergency:kill-switch": "node scripts/emergency-kill-switch.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.4.6",
    "@react-navigation/devtools": "^7.0.38",
    "@react-navigation/drawer": "^7.5.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.25",
    "@sentry/react-native": "~6.14.0",
    "@shopify/flash-list": "1.7.6",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "expo": "~53.0.22",
    "expo-auth-session": "~6.2.1",
    "expo-crypto": "~14.1.5",
    "expo-document-picker": "~13.1.6",
    "expo-haptics": "^14.1.4",
    "expo-image-picker": "~16.1.4",
    "expo-linking": "^7.1.7",
    "expo-local-authentication": "~16.0.5",
    "expo-notifications": "~0.31.4",
    "expo-secure-store": "~14.2.4",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-task-manager": "~13.1.6",
    "expo-web-browser": "~14.2.0",
    "i18next": "^25.4.2",
    "react": "19.0.0",
    "react-hook-form": "^7.53.2",
    "react-i18next": "^15.7.3",
    "react-native": "0.79.5",
    "react-native-background-job": "^2.3.1",
    "react-native-device-info": "^14.0.4",
    "react-native-document-picker": "^9.3.0",
    "react-native-fast-image": "^8.6.3",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-image-crop-picker": "^0.41.2",
    "react-native-localize": "^3.5.2",
    "react-native-mmkv": "^3.1.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-ssl-pinning": "^1.6.0",
    "react-native-vector-icons": "^10.2.0",
    "react-native-webview": "13.13.5",
    "socket.io-client": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native/eslint-config": "^0.81.0",
    "@storybook/addon-actions": "^8.4.7",
    "@storybook/addon-controls": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-ondevice-actions": "^8.4.7",
    "@storybook/addon-ondevice-controls": "^8.4.7",
    "@storybook/react-native": "^8.4.7",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.0.10",
    "@types/react-native-vector-icons": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "detox": "^20.27.3",
    "eslint": "^8.57.1",
    "eslint-config-expo": "^9.2.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.10",
    "jest-html-reporters": "^3.1.7",
    "jest-image-snapshot": "^6.4.0",
    "jest-junit": "^16.0.0",
    "jest-performance-testing": "^1.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.4",
    "nock": "^13.5.5",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
