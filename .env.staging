# Staging Environment Configuration
# Copy this file and update with actual staging values

# Database Configuration
DATABASE_URL=postgresql://teacher_hub_user:staging_password@postgres:5432/teacher_hub_staging
POSTGRES_DB=teacher_hub_staging
POSTGRES_USER=teacher_hub_user
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-change-me
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=staging

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./uploads/temp

# YouTube API Configuration
YOUTUBE_API_KEY=staging-youtube-api-key
YOUTUBE_CLIENT_ID=staging-youtube-client-id
YOUTUBE_CLIENT_SECRET=staging-youtube-client-secret
YOUTUBE_REDIRECT_URI=https://staging-api.teacherhub.ug/auth/youtube/callback
YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.upload

# File Security Configuration
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
ENABLE_VIRUS_SCANNING=true
ENABLE_CONTENT_SCANNING=true

# External API Configuration
MOE_API_URL=https://api.education.go.ug
UNEB_API_URL=https://api.uneb.ac.ug
NCDC_API_URL=https://api.ncdc.go.ug

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=teacher-hub-files-staging

# Push Notifications Configuration
REACT_APP_VAPID_PUBLIC_KEY=staging-vapid-public-key

# Monitoring and Alerting Configuration
SENTRY_DSN=staging-sentry-dsn
LOG_LEVEL=debug
ENABLE_METRICS=true
METRICS_PORT=9090

# Real-time Features Configuration
WEBSOCKET_PORT=3002
ENABLE_WEBSOCKET_CLUSTERING=false

# Admin Configuration
ADMIN_EMAIL=admin@staging.teacherhub.ug
ADMIN_PASSWORD=staging-admin-password
SUPER_ADMIN_EMAILS=admin@staging.teacherhub.ug

# Staging URLs
API_URL=https://staging-api.teacherhub.ug
WEB_URL=https://staging.teacherhub.ug
WS_URL=wss://staging-api.teacherhub.ug

# Notification Configuration
SLACK_WEBHOOK_URL=staging-slack-webhook-url