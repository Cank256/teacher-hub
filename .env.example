# Database Configuration
DATABASE_URL=postgresql://teacher_hub_user:teacher_hub_password@localhost:5432/teacher_hub

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./uploads/temp

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/auth/youtube/callback
YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.upload

# File Security Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
ENABLE_VIRUS_SCANNING=true
ENABLE_CONTENT_SCANNING=true

# External API Configuration
MOE_API_URL=https://api.education.go.ug
UNEB_API_URL=https://api.uneb.ac.ug
NCDC_API_URL=https://api.ncdc.go.ug

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=teacher-hub-files

# Push Notifications Configuration
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key

# Monitoring and Alerting Configuration
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Real-time Features Configuration
WEBSOCKET_PORT=3002
ENABLE_WEBSOCKET_CLUSTERING=false

# Admin Configuration
ADMIN_EMAIL=admin@teacherhub.ug
ADMIN_PASSWORD=change-in-production
SUPER_ADMIN_EMAILS=admin@teacherhub.ug,superadmin@teacherhub.ug